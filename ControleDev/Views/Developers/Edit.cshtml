@model ControleDev.Models.Developer
@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Desenvolvedores</h4>
<hr />  
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <input type="hidden" asp-for="CreatedAt" />
            </div>
            <div class="form-group">
                <label asp-for="name" class="col-form-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avatar" class="col-form-label"></label>
                <input asp-for="Avatar" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Squad" class="col-form-label"></label>
                <input asp-for="Squad" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Login" class="col-form-label"></label>
                <input asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="id" />
            </div>
            <p />
            <div>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}